

<div class="panel panel-default ">
  <div class="panel-body" >   
     <%= simple_form_for [:admin, @product] do|f| %>   
	   <div  class="group">
	   <%= f.input :title, label:'標題' %>
	   </div>
	
	   <div class="group">
	   <%= f.input :description, label:'敘述'%>	
	   </div>		

	   <div class = "group">
	   <%= f.input :quantity, label:'數量' %>
	   </div>

	   <%= f.submit "Submit", :disable_with => 'Submiting...' %>
  </div>
</div>


<% end %>			