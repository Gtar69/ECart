<h2>訂單列表</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>客戶</th>
      <th>訂單生成時間</th>
      <th>訂單狀態</th>
    </tr>
  </thead>
  <tbody>
      <%= @orders.each do |order| %>
    <tr>
      <td><%= render_order_link(order)%></td>
      <td><%= render_order_user_name(order) %></td> 
      <td><%= render_order_created_time(order)%></td>
      <td><%= render_order_state(order) %></td>
    </tr>
    <% end %>
  </tbody>
</table>